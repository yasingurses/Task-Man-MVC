
@{
    ViewData["Title"] = "Chat";
    Layout = "~/Views/Shared/_Admin.cshtml";
}





 
     
 
     
   
    <style>
        .container {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: #e0e0e0;
        }

        .panel-heading {
            margin-top: 10px;
            font-size: 32px;
            text-align: center;
            font-weight: 600;
        }

        .row {
            margin: 15px 0px;
        }

        input {
            padding: 8px 10px 8px 10px;
            border: 1px solid #aaaaaa;
            font-family: 'Inter', sans-serif;
            width: 300px;
            border-radius: 10px;
        }

            input:focus {
                outline: 0;
                border-bottom: 4px solid orange;
            }

        button {
            outline: 0;
            border: 0;
            padding: 5px 15px;
            background-color: #808080;
            color: white;
            border-radius: 10px;
            width: 300px;
        }

            button:hover {
                background-color: #5a5a5a;
                transition: 300ms all ease-in;
            }
    </style>
 


    <div class="container back">
        <div class="panel-heading">Topluluk Chat Bölümü</div>
        <div class="panel-heading">Admin ve Userlar arası anlık iletişim bölümü</div>
        <div class="row panel panel-default">&nbsp;</div>
        <div class="row">
            <div class="col-4"><input type="text" id="userInput" placeholder="Kullanıcı Adınızı Giriniz" /></div>
        </div>
        <div class="row">
            <div class="col-4"><input type="text" id="messageInput" placeholder="Mesajınızı Yazınız" /></div>
        </div>
        <div class="row">&nbsp;</div>
        <div class="row">
            <div class="col-6">
                <button type="button" id="sendButton" value="Gönder">Gönder</button>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <ul id="messagesList"></ul>
        </div>
    </div>

